# .env for Assessment Service
# This service will run on a different port than the Kosmos Core service

# Uvicorn server settings
ASSESSMENT_APP_HOST=127.0.0.1
ASSESSMENT_APP_PORT=8015

# API endpoint for the Kosmos Core Service, which this service depends on
KOSMOS_API_URL=http://127.0.0.1:8011/api/v1/

# Database connection string for the Assessment Service's own database
# Using PostgreSQL - consistent with the rest of the system
DATABASE_URL="postgresql://kosmos:kosmos123@localhost:5432/kosmos"

# Agent Session Control
# Sets the maximum number of actions (e.g., search, read) an agent can perform in a single session.
ASSESSMENT_ACTION_LIMIT=100