# ----------------------------------------------------------------------
# External Tool Paths
# ----------------------------------------------------------------------
# Full path to the LibreOffice executable (e.g., C:\Program Files\LibreOffice\program\soffice.exe on Windows)
LIBREOFFICE_PATH=
# Full path to the MinerU executable
MINERU_PATH=

# MinerU Backend Configuration
MINERU_BACKEND=pipeline
MINERU_SERVER_URL=http://localhost:30005
MINERU_SOURCE=huggingface

# ----------------------------------------------------------------------
# PostgreSQL Database
# ----------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=PostgreSQL
POSTGRES_DB=kosmos
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# ----------------------------------------------------------------------
# Minio Object Storage
# ----------------------------------------------------------------------
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ROOT_USER=minio-root-user
MINIO_ROOT_PASSWORD=minio-root-password
MINIO_BUCKET_ORIGINALS=kosmos-originals
MINIO_BUCKET_ASSETS=kosmos-assets
MINIO_BUCKET_CANONICAL_CONTENTS=kosmos-canonical-contents

# ----------------------------------------------------------------------
# Milvus Vector Database
# ----------------------------------------------------------------------
MILVUS_HOST=127.0.0.1
MILVUS_PORT=19530
MILVUS_USER=root
MILVUS_PASSWORD=Milvus

# ----------------------------------------------------------------------
# Redis
# ----------------------------------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# ----------------------------------------------------------------------
# JWT Authentication
# It is strongly recommended to change the SECRET_KEY in a production environment.
# You can generate a new key using: openssl rand -hex 32
# ----------------------------------------------------------------------
SECRET_KEY=a_very_secret_key_that_should_be_changed
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
SUPER_ADMIN_ACCESS_TOKEN_EXPIRE_MINUTES=10080 # 7 days

# ----------------------------------------------------------------------
# Super Admin User for Initial Setup
# Used by the `scripts/create_db_tables.py` to create a default admin.
# ----------------------------------------------------------------------
ADMIN_USERNAME=songdifei
ADMIN_EMAIL=songdifei@hxdi.com
ADMIN_DISPLAY_NAME="宋涤非"
ADMIN_PASSWORD="anime0615+"

# ----------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------
# Base URL for the public-facing API
API_BASE_URL=http://localhost:8011
# Base URL for the internal API (for worker callbacks, admin tasks, etc.)
INTERNAL_API_BASE_URL=http://localhost:8012
# A shared secret key to authenticate requests between internal services (e.g., worker to internal API)
# It is strongly recommended to change this in a production environment.
INTERNAL_API_SECRET=a_very_secret_internal_key

# ----------------------------------------------------------------------
# Auto Asset Description Configuration
# ----------------------------------------------------------------------
# 是否启用自动资产描述功能
AUTO_ASSET_DESCRIPTION_ENABLED=true
# 自动分析的最大文件大小（MB），默认10MB
AUTO_ASSET_DESCRIPTION_MAX_SIZE_MB=10

# ----------------------------------------------------------------------
# Document Processing Timeout Configuration
# ----------------------------------------------------------------------
DOCUMENT_PROCESSING_TIMEOUT_MINUTES=30
